{
  "name": "egghead-redux-part1",
  "version": "0.1.0",
  "description": "A repo to help document my progress to Dan Abramov's Getting started with Redux course on egghead.io",
  "main": "index.js",
  "scripts": {
    "start": "concurrently -k -r -s first \"yarn test:watch\" \"yarn serve\"",
    "serve": "webpack-dev-server --open --config webpack.config.dev.js",
    "build": "yarn test && yarn webpack --config webpack.config.prod.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint",
    "lint:watch": "eslint --watch",
    "lint:quiet": "eslint -s"
  },
  "jest": {
    "setupFiles": [
      "./jest-setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "^actions/(.*)": "<rootDir>/src/actions/$1",
      "^components/(.*)": "<rootDir>/src/components/$1",
      "^constants(.*)": "<rootDir>/src/constants/$1",
      "^mocks/(.*)": "<rootDir>/src/mocks/$1",
      "^utils/(.*)": "<rootDir>/src/utils/$1"
    }
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [],
  "author": "Tom Gillard",
  "license": "MIT",
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "chalk": "^2.3.0",
    "clean-webpack-plugin": "^0.1.17",
    "concurrently": "^3.5.0",
    "deep-freeze": "^0.0.1",
    "enzyme": "^3.1.1",
    "enzyme-adapter-react-16": "^1.0.4",
    "enzyme-to-json": "^3.2.2",
    "eslint": "^4.11.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-react": "^7.4.0",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.2.1",
    "prompt": "^1.0.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "replace": "^0.3.0",
    "rimraf": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "uuid": "^3.1.0",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4",
    "webpack-merge": "^4.1.1"
  }
}
